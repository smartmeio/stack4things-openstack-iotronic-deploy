#!/bin/bash

# clean all pid
[ -f /run/apache2/apache2.pid ] && rm /run/apache2/apache2.pid
# Start the first process
/usr/sbin/apache2ctl -D FOREGROUND &
status=$?
if [ $status -ne 0 ]; then
  echo "Failed to start APACHE2: $status"
  exit $status
fi

# Start the second process
/usr/bin/memcached -u memcache &
status=$?
if [ $status -ne 0 ]; then
  echo "Failed to start memcached: $status"
  exit $status
fi

while sleep 60; do
  ps aux |grep apache2 |grep -q -v grep
  PROCESS_1_STATUS=$?
  ps aux |grep memcached |grep -q -v grep
  PROCESS_2_STATUS=$?
  # If the greps above find anything, they exit with 0 status
  # If they are not both 0, then something is wrong
  if [ $PROCESS_1_STATUS -ne 0 -o $PROCESS_2_STATUS -ne 0 ]; then
    echo "One of the processes has already exited."
    exit 1
  fi
done